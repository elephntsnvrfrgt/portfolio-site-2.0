extends layout.pug	

block prepend head
	- var pageTitle = "Odigo Auto Insurance"
block content
	#menu-btn
		<svg id="burger" width="14" class="openmenu" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30"><path class="top" d="M0 6h30v2H0z"/><line class="mid" x1="0" y1="15" x2="30" y2="15" stroke-width="1.4" vector-effect="non-scaling-stroke"/><path class="bot" d="M0 22h30v2H0z"/></svg>
		#menuText.small Other work
		
	.container
		section.grid-container.intro.revealMove.load-hidden#hero-odi
			.content-hero.revealMove.load-hidden
				+mixin_hero('Odigo Auto Insurance','Insure','App | Concept, Design, & Motion')
				.herotext.description
					p Car-Net is a service by Volkswagen that allows you to remotely interact with your car from your device.
					p This case study is a fork of some pitch work I was apart of at Razorfish. The product redesign was a small part of the pitch, so afterwards I went back and thought more about what could make it a more interesting and useful tool. 
	
		.section-title The App
		section.grid-container.content
			
			+mixin_5050-iRight('Welcome', 'Lorem ipsum', 'assets/img/subpage/odi/odi-01@2x.png')
			+mixin_5050-iLeft('Activity', 'Lorem ipsum', 'assets/img/subpage/odi/odi-02@2x.png')
			+mixin_5050-iRight('Insurance', 'Lorem ipsum', 'assets/img/subpage/odi/odi-03@2x.png')
			+mixin_5050-iLeft('Incidents', 'Lorem ipsum', 'assets/img/subpage/odi/odi-04@2x.png')
			+mixin_5050-iRight('Profile & Settings', 'Lorem ipsum', 'assets/img/subpage/odi/odi-05@2x.png')
		
		#odiendsection1
			
		.section-title Assistant
		section.grid-container.content
			+mixin_5050-iRight('Ask Odigo', 'Lorem ipsum', 'assets/img/subpage/odi/odi-06@2x.png')
			+mixin_5050-iLeft('Call', 'Lorem ipsum', 'assets/img/subpage/odi/odi-07@2x.png')
			+mixin_5050-iRight('Chat', 'Lorem ipsum', 'assets/img/subpage/odi/odi-08@2x.png')
		
		#odiendsection2

		.footer
			#circle.nextPrjt
				<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="300px" height="300px" viewBox="0 0 300 300" enable-background="new 0 0 300 300" xml:space="preserve">
						<defs>
								<path id="circlePath" d=" M 150, 150 m -120, 0 a 120,120 0 0,1 240,0 a 120,120 0 0,1 -240,0 "/>
