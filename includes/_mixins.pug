//-- designed for homepage and subpage hero/intro components

mixin mixin_hero(eyebrow, title, info)
	.herotext
		.eyebrow= eyebrow
		h2.title= title
		.info= info
		
		//-- end hero text block



//-- resume list items --------------------------------------------------------

mixin mixin_experience(job_name, years)
	li.experience
		p= job_name
		.small= years
		
		//-- end resume list items
		
		

