//-- hero text block ----------------------------------------------------------
//-- designed for homepage and subpage hero/intro components

mixin mixin_hero(eyebrow, title, info)
	.herotext
		.eyebrow.fadeInMove= eyebrow
		h2.title.fadeInMove= title
		.info.fadeInMove= info
		
		//-- end hero text block



//-- resume list items --------------------------------------------------------

mixin mixin_experience(job_name, years)
	li.experience
		p= job_name
		.small= years
		
		//-- end resume list items



//-- 5050 component -----------------------------------------------------------
//-- designed for subpages with image paired w/ type, side-by-side

mixin mixin_5050-iRight(headline, body, src)
	.fiftyfifty.iRight-l.iRight-s.trigger.trigger-s
		.right
			img.fadeInMove(src=src lazyload="on")
		.left
			.content-hl.fadeInMove=headline
			p.fadeInMove=body
		
				
mixin mixin_5050-iLeft(headline, body, src)
	.fiftyfifty.iLeft-l.iLeft-s.trigger.trigger-s
		.left
			img.fadeInMove(src=src lazyload="on")
		.right
			.content-hl.fadeInMove=headline
			p.fadeInMove=body

		//-- end 5050 component
			
			
//-- overlap component --------------------------------------------------------
//-- designed for cmhf --------------------------------------------------------

mixin mixin_overlap(eyebrow, desktop_img, mobile_img)
	
	.overlap-component.trigger.trigger-s
		.eyebrow.fadeInMove=eyebrow
		.desktop-comp.fadeInMove
			img(src=desktop_img lazyload="on")
		.mobile-comp.fadeInMove
			img(src=mobile_img lazyload="on")
				
		//-- end overlap component	
		
		
