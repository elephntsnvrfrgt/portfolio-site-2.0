//-- 5050 component -----------------------------------------------------------
//-- designed for subpages with image paired w/ type, side-by-side

mixin mixin_5050-iRight(headline, body, src)
	.fiftyfifty.revealFade.load-hidden
		.left
			.content-hl=headline
			p=body
		.right
			img(src=src)
				
mixin mixin_5050-iLeft(headline, body, src)
	.fiftyfifty.revealFade.load-hidden
		.left
			img(src=src)
		.right
			.content-hl=headline
			p=body

		//-- end 5050 component
			
			
//-- overlap component --------------------------------------------------------
//-- designed for cmhf --------------------------------------------------------

mixin mixin_overlap(eyebrow, desktop_img, mobile_img)
	.revealFade.load-hidden.eyebrow=eyebrow
	.overlap-component.revealFade.load-hidden
		.desktop-comp
			img(src=desktop_img)
		.mobile-comp
			img(src=mobile_img)
				
		//-- end overlap component	
