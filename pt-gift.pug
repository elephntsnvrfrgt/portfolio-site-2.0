extends layout.pug	

block prepend head
	- var pageTitle = "Patrón Tequila Gift Guide"

block append content
		#barba-wrapper
			.barba-container#cmhf
				include includes/_scrollbar.pug
				include includes/_menu.pug
				#menu-btn.initreveal
					<svg id="burger" width="14" class="openmenu" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30"><path class="top" d="M0 6h30v2H0z"/><line class="mid" x1="0" y1="15" x2="30" y2="15" stroke-width="1.4" vector-effect="non-scaling-stroke"/><path class="bot" d="M0 22h30v2H0z"/></svg>
					#menuText.small Other work
		
				.container
					section.grid-container.intro#hero-pt-gift
						.content-hero.parallaxH
							+mixin_hero('Patrón Tequila','Guide','Web | Concept, Design, Art Dir.')
							.herotext.description
								p.fadeInMove Located in Nashville, TN, Country Music Hall of Fame and Museum preserves the history and cultural importance of this music genre. They invited The Tombras Group, where I served as a visual designer, to pitch a tri-part site suite. In addition to the museum, CMHF manages two other historic entities: the legendary Hatch Show Print and Historic Studio B.
								p.fadeInMove What started as a pitch, this responsive design concept became more of an exercise in process and thinking. I was able to extend the initial ideas into more thoughtful design systems.
				
					.section-title.parallaxST Gift Guide
					section.grid-container.content
						
						+mixin_overlap12('Landing Page','assets/img/subpage/pt-gift/patron-00-D-L@2x.jpg','assets/img/subpage/pt-gift/patron-00-M-L@2x.png')
					
						.img-9.trigger.trigger-s
							.info.caption.fadeInMove Archetype 01
							img.fadeInMove(src='assets/img/subpage/pt-gift/patron-01-L.jpg')
					
						.img-9.trigger.trigger-s
							.info.caption.fadeInMove Archetype 02
							img.fadeInMove(src='assets/img/subpage/pt-gift/patron-02-L.jpg')
					
						.img-9.trigger.trigger-s
							.info.caption.fadeInMove Archetype 03
							img.fadeInMove(src='assets/img/subpage/pt-gift/patron-03-L.jpg')
						
						.img-9.trigger.trigger-s
							.info.caption.fadeInMove Archetype 04
							img.fadeInMove(src='assets/img/subpage/pt-gift/patron-04-L.jpg')
								
					#ptendsection1.parallaxSD
						
					.section-title.parallaxST Archetype
					section.grid-container.content
						
						+mixin_overlap('Detail Page','assets/img/subpage/pt-gift/patron-05-D-L@2x.jpg','assets/img/subpage/pt-gift/patron-05-M-L@2x.png')
						+mixin_overlap3up('','assets/img/subpage/pt-gift/patron-06-L@2x.jpg','assets/img/subpage/pt-gift/patron-07-L@2x.jpg','assets/img/subpage/pt-gift/patron-08-L@2x.jpg')
						
					#ptendsection2.parallaxSD
						
					section.grid-container.content
						+mixin_overlap12('Menu','assets/img/subpage/pt-gift/patron-09-D-L@2x.jpg','assets/img/subpage/pt-gift/patron-09-M-L@2x.png')
						+mixin_overlap12('Video Player','assets/img/subpage/pt-gift/patron-10-D-L@2x.jpg','assets/img/subpage/pt-gift/patron-10-M-L@2x.png')

					#ptendsection3.parallaxSD
						
						
					.footer.trigger.trigger-s
						#circle.nextPrjt.fadeInMove
							<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="300px" height="300px" viewBox="0 0 300 300" enable-background="new 0 0 300 300" xml:space="preserve">
									<defs>
											<path id="circlePath" d=" M 150, 150 m -120, 0 a 120,120 0 0,1 240,0 a 120,120 0 0,1 -240,0 "/>
									</defs>
									<circle cx="150" cy="150" r="150" fill="none"/>
									<g>
											<use xlink:href="#circlePath" fill="none"/>
											<text fill="#9B9B9B">
													<textPath xlink:href="#circlePath" textLength="730" lengthAdjust="spacing">T-Mobile Switcher • T-Mobile Switcher •</textPath>
											</text>
									</g>
							</svg>
						a#next.title.fadeInMove(href="tmo-switcher.html") Next
						
					include includes/_footer.pug
